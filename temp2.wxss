.modal-dialog { position: absolute; top: 50%; left: 50%; width: 85%; background-color: #141414; border-radius: 12px; padding: 24px; transform: translate(-50%, -50%) scale(0.8); opacity: 0; transition: all 0.3s ease; z-index: 1001; }
.modal.show .modal-dialog { transform: translate(-50%, -50%) scale(1); opacity: 1; }
