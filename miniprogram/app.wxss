/**app.wxss**/
page {
  background-color: #f6f6f6;
  font-size: 16px;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: linear-gradient(to bottom,rgb(0, 0, 0),rgb(0, 0, 0));
  min-height: 100vh;
}

.title {
  font-size: 24px;
  color: #333;
  font-weight: bold;
  margin: 20px 0;
}

.subtitle {
  font-size: 18px;
  color: #666;
  margin: 10px 0;
}

.btn-primary {
  background-color:rgb(0, 0, 0);
  color: white;
  border-radius: 10px;
  padding: 8px 16px;
  margin: 10px 0;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 8px 16px;
  margin: 10px 0;
}

.card {
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 15px;
  margin: 10px 0;
}

/* 头像环效果 */
.avatar-mask::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border: 8rpx solid white; /* 白色圆环 */
  z-index: 3;
  pointer-events: none;
} 

.avatar-mask {
  background-color: rgba(255, 255, 255, 0.1);
}