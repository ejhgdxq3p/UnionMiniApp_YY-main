/* miniprogram/pages/connectionMap/connectionMap.wxss */
.container {
  padding: 30rpx;
  background: linear-gradient(to bottom, #e8f5e9, #c8e6c9);
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.back-button {
  font-size: 30rpx;
  color: #333;
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 30rpx;
}

.map-container {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
  height: 500px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.connection-map {
  width: 100%;
  height: 100%;
}

.legend {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.legend-desc {
  font-size: 28rpx;
  color: #666;
}

.node {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.center-node {
  width: 100rpx;
  height: 100rpx;
  z-index: 10;
}

.node-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.edge {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.edge-label {
  font-size: 20rpx;
  color: #666;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.legend-text {
  font-size: 24rpx;
  color: #333;
} 