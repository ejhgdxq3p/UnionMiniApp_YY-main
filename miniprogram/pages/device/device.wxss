/* ===== 整体容器样式 ===== */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* ===== 扫描界面样式 ===== */
.scan-container {
  padding: 32rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.scan-header {
  margin-bottom: 48rpx;
  text-align: center;
}

.scan-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 28rpx 56rpx;
  font-size: 34rpx;
  font-weight: 600;
  min-height: 88rpx;
  line-height: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

.scan-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.scan-button[loading] {
  background: linear-gradient(135deg, #ccc 0%, #999 100%);
}

/* 设备发现区域 */
.device-discovery-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 64rpx 32rpx;
}

/* 扫描中状态 */
.scanning-state {
  text-align: center;
  animation: fadeIn 0.5s ease;
}

.scanning-animation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  gap: 16rpx;
}

.scanning-circle {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  animation: scanningPulse 1.5s infinite ease-in-out;
}

.scanning-circle:nth-child(2) {
  animation-delay: 0.2s;
}

.scanning-circle:nth-child(3) {
  animation-delay: 0.4s;
}

.scanning-text {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

/* 设备发现状态 */
.device-found-state {
  text-align: center;
  animation: slideUp 0.6s ease;
  width: 100%;
}

/* 连接引导动画 */
.connection-guide {
  margin-bottom: 48rpx;
  position: relative;
}

.guide-ring {
  width: 120rpx;
  height: 120rpx;
  border: 3rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 50%;
  position: relative;
  margin: 0 auto;
  animation: rotate 3s linear infinite;
}

.guide-dot {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  top: -6rpx;
  left: 50%;
  transform: translateX(-50%);
}

.guide-dot:nth-child(2) {
  top: 50%;
  right: -6rpx;
  left: auto;
  transform: translateY(-50%);
}

.guide-dot:nth-child(3) {
  bottom: -6rpx;
  top: auto;
  left: 50%;
  transform: translateX(-50%);
}

.connection-guide.animate .guide-ring {
  animation: rotate 2s linear infinite;
}

/* 设备卡片 */
.device-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  min-height: 120rpx;
}

.device-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border-color: #667eea;
}

.device-icon {
  margin-right: 24rpx;
  flex-shrink: 0;
}

.necklace-icon {
  font-size: 56rpx;
  animation: sparkle 2s ease-in-out infinite;
}

.device-info {
  flex: 1;
  text-align: left;
  min-width: 0; /* 防止文字溢出 */
}

.device-name-subtle {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  letter-spacing: 0.5rpx;
}

.device-signal {
  display: block;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.connect-button {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-weight: 600;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  flex-shrink: 0;
  white-space: nowrap;
}

.connect-text {
  margin-right: 8rpx;
  letter-spacing: 0.5rpx;
}

.connect-arrow {
  font-size: 28rpx;
  animation: bounce 1s ease-in-out infinite;
}

/* 连接提示 */
.connection-tip {
  text-align: center;
  animation: fadeIn 0.8s ease 0.3s both;
}

.connection-tip text {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 6rpx;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

.tip-subtitle {
  font-size: 22rpx !important;
  color: #999 !important;
  font-weight: 400 !important;
  letter-spacing: 0.5rpx !important;
  white-space: nowrap !important;
}

/* 未发现设备状态 */
.no-devices {
  text-align: center;
  animation: fadeIn 0.5s ease;
}

.no-device-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.no-device-text {
  display: block;
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

.no-devices-tip {
  font-size: 22rpx !important;
  color: #999 !important;
  display: block !important;
  letter-spacing: 0.5rpx !important;
  white-space: nowrap !important;
}

/* 动画定义 */
@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes scanningPulse {
  0%, 100% { 
    transform: scale(1);
    opacity: 0.6;
  }
  50% { 
    transform: scale(1.2);
    opacity: 1;
  }
}

@keyframes sparkle {
  0%, 100% { 
    transform: scale(1) rotate(0deg);
    filter: brightness(1);
  }
  50% { 
    transform: scale(1.1) rotate(5deg);
    filter: brightness(1.2);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(4rpx); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(40rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

