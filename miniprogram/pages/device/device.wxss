/* ===== 扫描界面样式 ===== */
/* 设备列表项样式，内边距和底部分割线 */
.device-item { 
  padding: 16rpx; 
  border-bottom: 1px solid #eee; 
  cursor: pointer;
}

/* Un开头设备高亮蓝色加粗 */
.device-un { 
  color: #1976d2; 
  font-weight: bold; 
}

/* 普通设备字体颜色 */
.device-normal { 
  color: #222; 
}

/* MAC地址样式 */
.device-mac { 
  font-size: 24rpx; 
  color: #888; 
}

/* 信号强度样式，右浮动 */
.device-rssi { 
  font-size: 24rpx; 
  color: #888; 
  float: right; 
}

/* ===== 设备详情界面样式 ===== */
/* 区块间距样式 */
.section { 
  margin: 24rpx 0; 
}

/* 输入框样式 */
input { 
  border: 1px solid #ccc; 
  padding: 8rpx; 
  border-radius: 8rpx; 
  width: 80%; 
}

/* 消息列表区域样式 */
.msg-list { 
  background: #fff; 
  min-height: 200rpx; 
  max-height: 400rpx;
  overflow-y: scroll;
  margin: 16rpx 0; 
  padding: 8rpx; 
  border-radius: 8rpx; 
  border: 1rpx solid #ddd;
}

/* 单条消息样式 */
.msg-item { 
  margin: 4rpx 0; 
  padding: 6rpx;
  background: #f8f9fa;
  border-radius: 4rpx;
  font-size: 26rpx;
}

/* 设备通知样式 */
.notify-list {
  background: #f8f9fa;
  min-height: 200rpx;
  max-height: 400rpx;
  overflow-y: scroll;
  margin: 16rpx 0;
  padding: 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.notify-item {
  display: flex;
  margin: 4rpx 0;
  padding: 8rpx;
  background: white;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.notify-time {
  color: #6c757d;
  width: 120rpx;
  flex-shrink: 0;
  font-size: 22rpx;
}

.notify-content {
  color: #495057;
  flex: 1;
  word-break: break-all;
}
