/* AI报告页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.report-card {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.header-left, .header-right {
  display: flex;
  align-items: center;
  min-width: 60rpx;
}

.back-icon {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.back-icon::before {
  content: "";
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  transform: rotate(-45deg);
  margin-right: 10rpx;
}

.clear-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  background-color: rgba(255, 255, 255, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 500;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 130rpx 30rpx 140rpx;
  box-sizing: border-box;
}

.message-item {
  margin-bottom: 40rpx;
  display: flex;
  position: relative;
}

.message-content {
  line-height: 1.6;
  font-size: 30rpx;
}

.message-item.system {
  justify-content: center;
}

.message-item.system .message-content {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.05);
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  max-width: 80%;
}

.message-item.user {
  justify-content: flex-end;
}

.message-item.bot {
  justify-content: flex-start;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #333;
  margin: 0 20rpx;
  flex-shrink: 0;
}

.user-avatar {
  background-color: rgba(102, 126, 234, 0.2);
  position: relative;
}

.user-avatar::after {
  content: "你";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(102, 126, 234, 1);
  font-size: 24rpx;
  font-weight: bold;
}

.bot-avatar {
  background-color: rgba(118, 75, 162, 0.2);
  position: relative;
}

.bot-avatar::after {
  content: "AI";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(118, 75, 162, 1);
  font-size: 24rpx;
  font-weight: bold;
}

.message-bubble {
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  word-break: break-all;
  max-width: 70%;
}

.user-bubble {
  background-color: rgba(102, 126, 234, 0.2);
  border: 1px solid rgba(102, 126, 234, 0.3);
}

.bot-bubble {
  background-color: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.message-item.error .message-content {
  color: #f87171;
  background-color: rgba(248, 113, 113, 0.1);
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 数据分析卡片 */
.analysis-card {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
  width: 90%;
  margin: 20rpx auto;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(5px);
}

.analysis-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.analysis-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.analysis-label {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  width: 160rpx;
}

.analysis-value {
  font-size: 28rpx;
  font-weight: 500;
  flex: 1;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  margin: 0 8rpx;
  animation: loadingAnimation 1.5s infinite ease-in-out;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loadingAnimation {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

.loading-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 底部输入框 */
.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 36rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.send-button {
  margin-left: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 16rpx 30rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
}
