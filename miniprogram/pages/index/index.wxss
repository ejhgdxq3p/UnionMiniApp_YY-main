}

/* 移除原来的标签颜色样式，统一使用蓝紫色渐变边框 */
.prof-tag,
.hobby-tag,
.personality-tag,
.quirky-tag {
  /* 统一样式，不再区分颜色 */
}

/* 个人信息区域 */
.personal-info-section {
  margin-bottom: 180rpx; /* 为浮动按钮留出更多空间 */
}

.info-item {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.info-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: -1;
  margin: -2rpx;
}

.info-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff; /* 白色文字 */
  margin-bottom: 15rpx;
}

.info-content {
  font-size: 28rpx;
  color: #cccccc; /* 浅灰色文字 */
  line-height: 1.6;
}

.qr-code-display {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: white;
  padding: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 212, 255, 0.3);
}

.photos-display {
