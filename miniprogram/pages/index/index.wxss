.floating-edit-btn {
  position: fixed;
  bottom: 120rpx; /* 增加底部距离，避免被导航栏挡住 */
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 1000;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.floating-edit-btn:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 18rpx rgba(102, 126, 234, 0.6);
}

.edit-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
  color: #ffffff;
}

.edit-hint {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 500;
}

