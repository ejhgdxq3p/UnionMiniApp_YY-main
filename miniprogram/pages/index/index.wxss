  width: 100%;
  text-align: center;
  padding: 60rpx 0;
}

.welcome-message {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.status-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 80rpx;
}

