/* ==================== 个人名片视图样式 ==================== */

.profile-card-view {
  padding: 20rpx;
  min-height: 100vh;
  background: #000000; /* 纯黑色背景 */
}

/* 名片头部 */
.profile-header {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.profile-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: -1;
  margin: -2rpx;
}

.profile-avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 3rpx solid #00d4ff;
  box-shadow: 0 0 20rpx rgba(0, 212, 255, 0.3);
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff; /* 白色文字 */
  margin-bottom: 8rpx;
}

.profile-subtitle {
  font-size: 24rpx;
  color: #cccccc; /* 浅灰色文字 */
  opacity: 0.8;
}

/* 标签展示区域 */
.tags-display-section {
  margin-bottom: 30rpx;
}

.tag-group {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.tag-group::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: -1;
  margin: -2rpx;
}

.tag-group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff; /* 白色文字 */
