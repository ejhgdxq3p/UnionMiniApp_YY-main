  text-align: center;
  font-style: italic;
  color: #aaa;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.all-tags-section .tags-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 16rpx;
  margin-top: 20rpx;
}

.all-tags-section .tag-btn {
  background-color: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.all-tags-section .tag-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.15);
}

.all-tags-section .tag-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.all-tags-section .tag-btn.active::before {
  content: '✓';
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
}

