/**高级标签问卷调查页面样式**/
/* 强制夜间模式 - 黑色背景 */
page {
  background-color: #000;
  color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

.container {
  background-color: #000;
  color: #fff;
  min-height: 100vh;
  padding: 24rpx 24rpx 200rpx;
  box-sizing: border-box;
}

/* 主内容区域 */
.content {
  width: 100%;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  text-align: center;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: #aaa;
  margin-bottom: 60rpx;
  max-width: 80%;
}

.login-btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  border: none;
}
.login-btn:active {
  background-color: #0056b3;
}

/* 用户头部信息 */
.user-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.avatar-container {
  position: relative;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.avatar-container:active .user-avatar {
  transform: scale(0.95);
  border-color: rgba(102, 126, 234, 0.5);
}

.avatar-upload-tip {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  white-space: nowrap;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-upload-tip {
  opacity: 1;
  color: #667eea;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #333;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
}

.progress {
  height: 100%;
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 20rpx;
  text-align: center;
}

/* 标签统计信息 */
.tags-summary {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.total-tags {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tags-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.tags-status.success {
  background: rgba(0, 212, 255, 0.2);
  color: #00d4ff;
}

.tags-status.warning {
  background: rgba(255, 159, 67, 0.2);
  color: #ff9f43;
}

/* 步骤内容 */
.step-content {
  margin-bottom: 40rpx;
}

.step-header {
  margin-bottom: 40rpx;
  text-align: center;
}

.step-title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.step-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.step-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.5;
}

/* 分类区域 */
.category-section {
  margin-bottom: 40rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #fff;
  position: relative;
  padding-left: 20rpx;
}

.category-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  border-radius: 3rpx;
}

.category-note {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 20rpx;
  font-style: italic;
}

/* 分类选择器 */
.category-selector {
  margin-bottom: 30rpx;
}

.category-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
}

.category-tab {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  min-width: 100rpx;
  flex: 0 0 auto;
}

.category-tab:active {
  transform: scale(0.95);
}

.category-tab.active {
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  border-color: transparent;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 212, 255, 0.3);
}

/* 当前分类标签区域 */
.current-category-tags {
  margin-bottom: 40rpx;
}

.current-category-tags .category-title {
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 36rpx;
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  padding: 0;
}

.current-category-tags .category-title::before {
  display: none;
}

.current-category-tags .category-note {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
}

/* 标签网格 */
.tags-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.tag-btn {
  background-color: #2c2c2e;
  color: #fff;
  border: 2rpx solid #444;
  border-radius: 30rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  text-align: center;
  transition: all 0.2s;
  line-height: 1.4;
  cursor: pointer;
  min-width: 80rpx;
  flex: 0 0 auto;
}

.tag-btn:active {
  transform: scale(0.95);
}

.tag-btn.active {
  font-weight: bold;
  border: 2rpx solid transparent;
  background: linear-gradient(#000, #000) padding-box, 
              linear-gradient(135deg, #00d4ff, #7b68ee) border-box;
  color: #fff;
}

/* 特殊标签样式 */
.mbti-tag {
  font-size: 24rpx;
  padding: 14rpx 20rpx;
}

.zodiac-tag {
  flex: 0 0 calc(33.333% - 11rpx);
  min-width: 120rpx;
}

.quirky-tag {
  font-size: 24rpx;
  padding: 20rpx 16rpx;
  line-height: 1.3;
  text-align: left;
  flex: 0 0 calc(100% - 16rpx);
  border-radius: 20rpx;
}

.zodiac-grid {
  justify-content: space-between;
}

.quirky-grid .tag-btn {
  margin-bottom: 12rpx;
}

/* 闪光阈值设置 */
.threshold-setting {
  text-align: center;
}

.threshold-content {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 40rpx 0;
}

.threshold-display {
  margin-bottom: 40rpx;
}

.threshold-number {
  font-size: 120rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  line-height: 1;
  margin-bottom: 10rpx;
}

.threshold-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

.threshold-slider {
  margin: 40rpx 0;
}

.threshold-range {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 20rpx;
}

.threshold-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 30rpx;
  line-height: 1.5;
}

/* 联系方式表单 */
.contact-form {
  margin-top: 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  display: block;
}

.form-label.required::after {
  content: ' *';
  color: #ff6b6b;
}

.form-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #00d4ff;
  background: rgba(255, 255, 255, 0.08);
}

.form-input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;
  resize: none;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #00d4ff;
  background: rgba(255, 255, 255, 0.08);
}

.form-textarea::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

/* 上传区域 */
.upload-section {
  margin-top: 16rpx;
}

.upload-btn {
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: rgba(255, 255, 255, 0.08);
  border-color: #00d4ff;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.uploaded-image {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}

.uploaded-image image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

.reupload-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  padding: 16rpx;
  font-size: 24rpx;
}

/* 照片区域 */
.photos-section {
  margin-top: 16rpx;
}

.photos-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.photo-item {
  position: relative;
  width: calc(33.333% - 11rpx);
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.photo-item image {
  width: 100%;
  height: 100%;
}

.delete-photo {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.add-photo {
  width: calc(33.333% - 11rpx);
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.add-photo:active {
  background: rgba(255, 255, 255, 0.08);
  border-color: #00d4ff;
}

.add-icon {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}

.photos-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
}

/* 简单阈值显示 */
.threshold-info {
  margin-top: 16rpx;
}

.threshold-display-simple {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.threshold-number-simple {
  font-size: 48rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.threshold-text-simple {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.threshold-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
  font-style: italic;
}

/* 底部导航按钮 */
.nav-buttons {
  position: fixed;
  bottom: calc(96rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-top: 1rpx solid #333;
  backdrop-filter: blur(10px);
}

.nav-spacer {
  flex: 1;
}

.prev-btn, .next-btn, .submit-btn {
  background: transparent;
  border: 1rpx solid #fff;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.next-btn, .submit-btn {
  background: linear-gradient(135deg, #00d4ff, #7b68ee);
  border: none;
  color: #fff;
}

.prev-btn:active, .next-btn:active, .submit-btn:active {
  transform: scale(0.96);
}

.submit-btn.submitting {
  opacity: 0.7;
  transform: none;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .tag-btn {
    font-size: 24rpx;
    padding: 14rpx 20rpx;
  }
  
  .category-tab {
    font-size: 24rpx;
    padding: 14rpx 20rpx;
    min-width: 80rpx;
  }
  
  .quirky-tag {
    font-size: 22rpx;
    padding: 18rpx 14rpx;
  }
  
  .zodiac-tag {
    flex: 0 0 calc(50% - 8rpx);
  }
  
  .photo-item, .add-photo {
    width: calc(50% - 8rpx);
  }
  
  .threshold-number {
    font-size: 100rpx;
  }
}

@media (max-width: 500rpx) {
  .tag-btn {
    font-size: 22rpx;
    padding: 12rpx 16rpx;
  }
  
  .category-tab {
    font-size: 22rpx;
    padding: 12rpx 16rpx;
    min-width: 70rpx;
  }
  
  .zodiac-tag {
    flex: 0 0 calc(100% - 16rpx);
  }
  
  .photo-item, .add-photo {
    width: calc(100% - 16rpx);
  }
}

/* 其他输入框 */
.other-input {
  margin-top: 20rpx;
}

