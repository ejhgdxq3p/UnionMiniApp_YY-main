/* 关键嘉宾社交影响力页面样式 */
.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #000;
  color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 星星样式 */
.star {
  position: absolute;
  background-color: #fff;
  border-radius: 50%;
  opacity: 0.8;
  z-index: 1;
  will-change: transform;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #fff;
  border-left: 2px solid #fff;
  transform: rotate(-45deg);
  margin-right: 10rpx;
}

/* 页面标题 */
.header {
  margin-top: 120rpx;
  margin-bottom: 50rpx;
  text-align: center;
  z-index: 10;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  display: block;
}

/* 加载指示器 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top: 4rpx solid #fff;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 影响力排名列表 */
.influencer-list {
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  margin-bottom: 40rpx;
  z-index: 10;
}

.list-header {
  display: flex;
  padding: 20rpx 10rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.rank-title {
  flex: 0 0 80rpx;
  text-align: center;
}

.profile-title {
  flex: 0 0 220rpx;
  padding-left: 20rpx;
}

.metrics-title {
  flex: 1;
  text-align: center;
}

.score-title {
  flex: 0 0 100rpx;
  text-align: center;
}

.influencer-scroll {
  max-height: 800rpx;
}

.influencer-item {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.top-ranked {
  background-color: rgba(255, 255, 255, 0.05);
}

.rank {
  flex: 0 0 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.first {
  color: #FFD700; /* 金色 */
}

.second {
  color: #C0C0C0; /* 银色 */
}

.third {
  color: #CD7F32; /* 铜色 */
}

.profile {
  flex: 0 0 220rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #333;
  margin-right: 15rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.organization {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.metrics {
  flex: 1;
  display: flex;
  justify-content: space-around;
}

.metric {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.metric-value {
  font-size: 28rpx;
  font-weight: bold;
}

.metric-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 5rpx;
}

.score {
  flex: 0 0 100rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
}

/* 影响力解读 */
.influence-info {
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  padding: 30rpx;
  z-index: 10;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.info-item {
  display: flex;
  margin-bottom: 25rpx;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.interaction-icon {
  background: linear-gradient(45deg, #FF4500, #FF8C00);
}

.contacts-icon {
  background: linear-gradient(45deg, #1E90FF, #00BFFF);
}

.duration-icon {
  background: linear-gradient(45deg, #32CD32, #00FA9A);
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.info-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
} 